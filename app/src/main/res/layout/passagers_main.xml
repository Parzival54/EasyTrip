<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context=".affichage.Accueil"
    android:id="@+id/lieuLayout"
    android:foregroundGravity="top"
    android:gravity="fill_horizontal|top">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Adultes"
        android:textColor="@color/white"
        android:id="@+id/passagersAdultsEntree"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/passagerAdulteditText"
        android:layout_alignTop="@+id/passagerAdulteditText"
        android:background="@drawable/rect_bleufonce_bord_noir"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/passagerAdulteditText"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="@drawable/rect_blanc_bord_noir"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Enfants"
        android:textColor="@color/white"
        android:id="@+id/passagersEnfantsEntree"
        android:layout_alignTop="@+id/passagersEnfanteditText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/passagersEnfanteditText"
        android:background="@drawable/rect_bleufonce_bord_noir"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:ems="10"
        android:id="@+id/passagersEnfanteditText"
        android:layout_marginTop="36dp"
        android:background="@drawable/rect_blanc_bord_noir"
        android:layout_below="@+id/passagersAdultsEntree"
        android:layout_alignParentEnd="true"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Class"
        android:id="@+id/passagersClassEntree"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_bleufonce_bord_noir"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/passagersEnfantsEntree"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passagersEnfantsEntree" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/classeditText"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/passagersClassEntree"
        android:layout_alignBottom="@+id/passagersClassEntree"
        android:layout_alignEnd="@+id/passagersEnfanteditText"
        android:layout_alignStart="@+id/passagersEnfanteditText"
        android:background="@drawable/rect_blanc_bord_noir"
        android:text=""/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR ACCUEIL"
        android:id="@+id/retourAccueilBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/classeditText"
        android:layout_alignParentStart="true"
        android:background="#dfa70e"
        android:textStyle="bold" />

</RelativeLayout>
