<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:clickable="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" EASY TRIP "
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textStyle="bold|italic"
        android:textColor="#053e7f" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="WE MOVE PEOPLES"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:background="#f5a607"
        android:typeface="monospace"
        android:textColor="#0d5bf7"
        android:visibility="visible"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALLER A RESERVATION"
        android:id="@+id/resa_button"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="#dfa70e"
        android:onClick="OpenTravelBooking"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BIENVENU(E) / WELCOME"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:background="@drawable/rect_bleufonce_bord_noir"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ouvertureTVidentifiant"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/ouvertureTVidentifiant"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/ouvertureTVlisteReservations"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/ouvertureTVidentifiant"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:id="@+id/ouvertureTVlisteReservations"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/ouvertureBTconnexion"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ouvertureBTconnexion"
        android:id="@+id/ouvertureBTconnexion"
        android:background="#dfa70e"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>