<?xml version="1.0" encoding="utf-8"?>

<!-- Definig a container for you List Item-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Defining where should text be placed. You set you text color here-->

    <TextView
        android:id="@+id/volAllerRetour"
        android:textColor="#000000"
        android:gravity="start"
        android:text=""
        android:textSize="20sp"
        android:layout_margin="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/passagers"
        android:textColor="#000000"
        android:text=""
        android:textSize="15sp"
        android:layout_below="@id/volAllerRetour"
        android:layout_margin="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/prix"
        android:textColor="#000000"
        android:gravity="start"
        android:text=""
        android:textSize="15sp"
        android:layout_below="@id/passagers"
        android:layout_margin="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/classe"
        android:textColor="#000000"
        android:gravity="start"
        android:text=""
        android:textSize="15sp"
        android:layout_below="@id/prix"
        android:layout_margin="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/creation"
        android:textColor="#000000"
        android:gravity="end"
        android:text=""
        android:textSize="15sp"
        android:layout_below="@id/classe"
        android:layout_margin="4dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />


</RelativeLayout>