<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.merguez.easytrip">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".affichage.ChoixLieu"
            android:screenOrientation="portrait" />
        <activity android:name=".affichage.Ouverture">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".affichage.Accueil" />
        <activity android:name=".affichage.Recherche" />
        <activity android:name=".affichage.Filtres" />
        <activity android:name=".affichage.PassagersMain" />
        <activity android:name=".affichage.Recepisse" />
        <activity
            android:name=".affichage.Connexion"
            android:label="@string/title_activity_connexion" />
        <activity android:name=".affichage.ListeReservations"></activity>
    </application>

</manifest>